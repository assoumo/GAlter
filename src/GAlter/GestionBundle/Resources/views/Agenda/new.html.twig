{% extends 'GAlterUserBundle::layout.html.twig' %}

{% block corps %}
<div class="well" style="height: 700px">

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.type, "Type", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
        {{ form_errors(form.type) }}
        <div class="col-sm-4">
            {{ form_widget(form.type, {'attr': {'class': ' col-sm-5 form-control'}}) }}
        </div>

    </div>
    <div class="form-group">
        {{ form_label(form.date, "Date", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
        {{ form_errors(form.date) }}
        <div class="col-sm-4">
            {{ form_widget(form.date, {'attr': {'class': ' col-sm-5 form-control'}}) }}
        </div>

    </div>
    <div class="form-group">
        {{ form_label(form.heure, "Heur",{'label_attr': {'class':'col-sm-4 control-label'}}) }}
        {{ form_errors(form.heure)}}
        <div class="col-sm-4">
            {{ form_widget(form.heure, {'attr': {'class' : 'col-sm-7 form-control', 'type': 'textarea','id': "editor" }}) }}

        </div>
    </div>

    {{ form_widget(form.submit, {'attr': {'class' : ' col-sm-offset-5  col-sm-3 btn btn-primary'}}) }}

    {{ form_end(form) }}
    </div>
{% endblock %}
