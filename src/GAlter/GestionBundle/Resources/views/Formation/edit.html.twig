{% extends "GAlterUserBundle::layout.html.twig" %}

{% block titre %}  Modification {% endblock %}

{% block corps %}



    <form  class=" form-inline" action="{{ path('formation_update',{'id': entity.id}) }}" method="post" {{form_enctype(edit_form)}}>




        <div class="form-group">
            <label class="control-label">Libelle</label>


            {{ form_widget(edit_form.libelle, { 'attr' : { 'class':'form-control'} }) }}

        </div>
        <div class="form-group">
            <label class="control-label"> Description</label>

            {{ form_widget(edit_form.description, { 'attr' : { 'class':'form-control'}}) }}

        </div>
        <div class="form-group">
            <label class="control-label">Departement</label>

            {{ form_widget(edit_form.departement, { 'attr' : { 'class':'form-control', 'required':'required'}}) }}

        </div>



        <button class="btn btn-success btn-sm" type="submit">Valider</button>

        {{ form(edit_form) }}


    </form>




{% endblock %}
